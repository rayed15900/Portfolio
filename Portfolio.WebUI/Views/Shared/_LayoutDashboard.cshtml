<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portfolio.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="border bg-white box-shadow-right" style="top: 0; left: 0; bottom: 0; position: fixed;">
            <div style="margin-top: 120px;">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 sidebar">
                            <ul class="nav flex-column text-center">
                                <li class="nav-item mb-4">
                                    <a asp-controller="Dashboard" asp-action="Profile"><img src="/Icon/Profile.png" style="width: 140px;"></a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Education">Education</a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Skills">Skills</a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Projects">Projects</a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Achievements">Achievements</a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Resume">Resume</a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Links">Professional Links</a>
                                </li>
                                <li class="nav-item mb-1">
                                    <a class="btn btn-outline-dark btn-lg border border-0" style="width: 300px; font-size: 22px" asp-controller="Dashboard" asp-action="Profile">Profile</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow-bottom mb-3 fixed-top">
            <div class="container-fluid ms-5 me-5">
                <a class="navbar-brand fst-italic" asp-controller="Home" asp-action="Index">Portfolio Builder</a>
                <div class="d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-2">

            </div>
            <div class="col-10">
                <main role="main" style="margin-top: 130px; margin-bottom: 70px;">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <footer class="border-top footer bg-white box-shadow-top">
        <div class="ms-5 fst-italic ">
            &copy; 2023 - Portfolio Builder</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
